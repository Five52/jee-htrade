<?xml version="1.0" ?>
<project name="LibTrade" default="dist">

    <property name="source.dir" location="src" />
    <property name="doc.dest" location="doc" />

    <path id="external">
        <fileset dir="lib/">
            <include name="**/*.jar" />
        </fileset>
        <fileset dir="compileonlylib/">
            <include name="**/*.jar" />
        </fileset>
    </path>

    <target name="compile" depends="init">
        <javac srcdir="." destdir="build" includeantruntime="false">
            <classpath refid="external" />
            <include name="src/**/*.java" />
        </javac>
    </target>

    <target name="dist" depends="init,compile">
        <jar basedir="build" destfile="dist/libTrade.jar" excludes="test/**"/>
    </target>

    <target name="doc" depends="init,compile">
        <javadoc packagenames="trades" sourcepath="${source.dir}" destdir="${doc.dest}" />
    </target>

    <target name="compiletest">
        <javac srcdir="." destdir="build" classpath="build" classpathref="junit" includeantruntime="false">
            <include name="test/**/*.java"/>
            <classpath refid="external" />
        </javac>
    </target>

    <path id="junit">
        <pathelement path="/usr/share/java/junit4.jar" />
    </path>

    <target name="test" depends="compile,compiletest">
        <java fork="yes" classname="org.junit.runner.JUnitCore" classpath="build" classpathref="junit">
            <jvmarg value="-ea" />
            <arg value="test.TestOwnershipDBStub" />
        </java>
        <!-- <java fork="yes" classname="test.TestHibernateOwnerships" classpath="build:resources">
            <classpath refid="external" />
            <jvmarg value="-ea" />
        </java> -->
    </target>

    <target name="init">
        <mkdir dir="build" />
        <mkdir dir="dist" />
        <mkdir dir="doc" />
        <mkdir dir="lib" />
        <mkdir dir="compileonlylib" />
    </target>

    <target name="clear">
        <antcall target="clean" />
        <delete dir="build" />
        <delete dir="dist" />
        <delete dir="doc" />
        <delete dir="lib" />
        <delete dir="compileonlylib" />
    </target>

    <target name="clean">
        <delete verbose="true">
            <fileset dir="." includes="**/*~"  defaultexcludes="no" />
        </delete>
    </target>

</project>
